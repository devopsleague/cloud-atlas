# Big Sur 安装盘制作
sudo /Applications/Install\ macOS\ Big\ Sur.app/Contents/Resources/createinstallmedia \
    --volume /Volumes/macos_installer --applicationpath /Applications/Install\ macOS\ Big\ Sur.app

# Sequoia (15.2) 安装盘制作
sudo /Applications/Install\ macOS\ Sequoia.app/Contents/Resources/createinstallmedia \
    --volume /Volumes/macos_installer --applicationpath /Applications/Install\ macOS\ Sequoia.app
